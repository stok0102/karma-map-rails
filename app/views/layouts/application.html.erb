<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Karma Map</h1>
      <%= link_to "Caleb Stokka", 'https://github.com/stok0102'%>

    </header>
    <ul class="navbar">
      <li class="navbar-link"><%= link_to "Home", root_path %></li>
      <li class="navbar-link"><%= link_to "Deeds", root_path %></li>
      <% if current_user %>
        <% if current_user.account %>
          <li class="navbar-link"><%= link_to "My Profile", account_path(current_user.account)%></li>
          <li class="navbar-link"></li>
        <% end %>
      <% end %>
      <li class="navbar-link"><%= link_to "Home", root_path %></li>

    </ul>
    <section>
      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <%= yield %>
    </section>
  </body>
</html>
